<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_counter2"
        android:layout_width="111dp"
        android:layout_height="78dp"
        android:text="Event B"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/button_counter3"
        app:layout_constraintEnd_toEndOf="@+id/button_counter3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_counter3"
        app:layout_constraintTop_toBottomOf="@+id/button_counter1" />

    <Button
        android:id="@+id/button_counter1"
        android:layout_width="111dp"
        android:layout_height="78dp"
        android:text="Event A"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/button_counter2"
        app:layout_constraintEnd_toEndOf="@+id/button_counter2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_counter2"
        app:layout_constraintTop_toBottomOf="@+id/button_settings" />

    <Button
        android:id="@+id/button_counter3"
        android:layout_width="111dp"
        android:layout_height="78dp"
        android:text="Event C"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/button_data"
        app:layout_constraintEnd_toEndOf="@+id/view_counts"
        app:layout_constraintStart_toStartOf="@+id/view_counts"
        app:layout_constraintTop_toBottomOf="@+id/button_counter2" />

    <TextView
        android:id="@+id/view_counts"
        android:layout_width="169dp"
        android:layout_height="42dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="25dp"
        android:text="Total Count: "
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_data"
        app:layout_constraintEnd_toEndOf="@+id/button_data"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/button_data"
        app:layout_constraintTop_toBottomOf="@+id/button_counter3"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_data"
        android:layout_width="293dp"
        android:layout_height="45dp"
        android:layout_marginTop="297dp"
        android:text="Show My Counts"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.683" />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="293dp"
        android:layout_height="45dp"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="266dp"
        android:text="SETTINGS"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_counter1"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/button_counter1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.122" />

</androidx.constraintlayout.widget.ConstraintLayout>